{
  "compilerOptions": {
	  "module": "es6",
	  "target": "es6",
	  "lib": [
		  "es2020"
	  ],
	  "sourceMap":  true,
	  "outDir": "./dist/",
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "noEmitOnError": true,
	  "moduleResolution": "node"
  },
  "include": [
	"./src/**/*",
  ],
  "exclude": [
	"node_modules"
  ]
}